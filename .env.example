# ==============================================================================
# SECURITY & AUTHENTICATION
# ==============================================================================
# Critical secrets. Change these for production!
MONGO_PASSWORD=your_secure_mongo_password_hash
REDIS_PASSWORD=your_secure_redis_password_hash
JWT_SECRET=your_jwt_signing_secret_key_change_this

# ==============================================================================
# GENERAL & NETWORK
# ==============================================================================
# Your Domain (or localhost for dev). Include protocol.
DOMAIN=http://localhost
# The port where NGINX/Gateway is exposed (Host Port)
GATEWAY_PORT=80
# The port where the Dashboard UI is exposed (Host Port)
UI_PORT=3000

# ==============================================================================
# FRONTEND CONFIGURATION (Erxes UI)
# ==============================================================================
# These are baked into the React build or used at runtime.
# Usually matches the DOMAIN and UI_PORT.
REACT_APP_CDN_HOST=http://localhost:3000
REACT_APP_API_URL=http://localhost
REACT_APP_DASHBOARD_URL=http://localhost/dashboard/api
REACT_APP_API_SUBSCRIPTION_URL=ws://localhost/graphql

# ==============================================================================
# GATEWAY & CORS
# ==============================================================================
# Domain validation for API security.
ALLOWED_DOMAINS=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000

# ==============================================================================
# VERSIONING
# ==============================================================================
# "os" is the open-source edition.
ERXES_VERSION=os
NODE_ENV=production